x1 = int(input('Введите координаты ладьи 1 (от 1 до 8):'))
if 0 < x1 < 9:
	y1 = int(input('Введите координаты ладьи 1 (от 1 до 8):'))
	if 0 < y1 < 9:
		x2 = int(input('Введите координаты ладьи 2 (от 1 до 8):'))
		if 0 < x2 < 9:
			y2 = int(input('Введите координаты ладьи 2 (от 1 до 8):'))	
			if 0 < y2 < 9:
				if x1 == x2 or x1 == y2:
					print('Yes')
				elif y1 == x2 or y1 == y2:
					print('Yes')
				else: 
					print('No')
			else:
				print('Введенные Вами координаты выходят за границы шахматной доски')
		else:
			print('Введенные Вами координаты выходят за границы шахматной доски')
	else:
		print('Введенные Вами координаты выходят за границы шахматной доски')		
else:
	print('Введенные Вами координаты выходят за границы шахматной доски')
